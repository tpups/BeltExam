@model Register
<style>
    .errors{
        color: red;
    }
</style>
<body>
    <h1>Welcome to the Dojo Activity Center</h1>
    <div class="container">
        <div class="col-xs-3">
            <h2>Login</h2>
            <form asp-action="UserLogin" asp-controller="Home" method="post">
                    <div class="form-group">
                        <span class="errors">@ViewBag.errors</span><br>
                        <label for="login_email">Email:</label>
                        <input type="text" name="login_email" class="form-control">
                    </div>
                    <div class="form-group">
                        <label for="login_password">Password:</label>
                        <input type="password" name="login_password" class="form-control"><br>
                        <input type="submit" class="btn btn-primary">
                    </div>
            </form>
        </div>
        <div class="col-xs-3">
            <h2>Registration</h2>
            <form asp-action="Create" asp-controller="Home" method="post">
                    <div class="form-group">
                        <span class="errors" asp-validation-for="FirstName"></span><br>
                        <label asp-for="FirstName">First name:</label>
                        <input asp-for="FirstName"class="form-control">
                    </div>
                    <div class="form-group">
                        <span class="errors" asp-validation-for="LastName"></span><br>
                        <label for="LastName">Last name:</label>
                        <input asp-for="LastName" class="form-control">
                    </div>
                    <div class="form-group">
                        <span class="errors" asp-validation-for="Email"></span><br>
                        <label asp-for="Email">Email:</label>
                        <input asp-for="Email" class="form-control">
                    </div>
                    <div class="form-group">
                        <span class="errors" asp-validation-for="Password"></span><br>
                        <label asp-for="Password">Password:</label>
                        <input type="password" asp-for="Password" class="form-control">
                    </div>
                    <div class="form-group">
                        <span class="errors" asp-validation-for="ConfirmPW"></span><br>
                        <label asp-for="ConfirmPW">Confirm password:</label>
                        <input type="password" asp-for="ConfirmPW" class="form-control">
                    </div>
                <input type="submit" class="btn btn-primary">
            </form>
        </div>
    </div>
</body>