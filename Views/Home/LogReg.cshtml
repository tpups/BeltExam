@model Register
<h1>Welcome to the Dojo Activity Center</h1>
<h2>Login</h2>
<form asp-action="UserLogin" asp-controller="Home" method="post">
    <span class="errors">@ViewBag.errors</span><br>
    <label for="login_email">Email:</label>
    <input type="text" name="login_email"><br>
    <label for="login_password">Password:</label>
    <input type="password" name="login_password"><br>
    <input type="submit">
</form>
<h2>Registration</h2>
<form asp-action="Create" asp-controller="Home" method="post">
    <span asp-validation-for="FirstName"></span><br>
    <label asp-for="FirstName">First name:</label>
    <input asp-for="FirstName"><br>
    <span asp-validation-for="LastName"></span><br>
    <label for="LastName">Last name:</label>
    <input asp-for="LastName"><br>
    <span asp-validation-for="Email"></span><br>
    <label asp-for="Email">Email:</label>
    <input asp-for="Email"><br>
    <span asp-validation-for="Password"></span><br>
    <label asp-for="Password">Password:</label>
    <input type="password" asp-for="Password"><br>
    <span asp-validation-for="ConfirmPW"></span><br>
    <label asp-for="ConfirmPW">Confirm password:</label>
    <input type="password" asp-for="ConfirmPW"><br>
    <input type="submit">
</form>
